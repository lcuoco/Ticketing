{# src/OC/UserBundle/Resources/views/Security/login.html.twig #}
{% extends "TicketingBundle:Ticketing:layout.html.twig" %}

{% block body %}

    {# S'il y a une erreur, on l'affiche dans un joli cadre #}
    {% if error %}
        <div class="alert alert-danger">{{ error.message }}</div>
    {% endif %}

    {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}

    <h1> <div class = "text-center"> Connexion au Portail</div></h1>
    <br><br>

    <form class="form-horizontal" action="{{ path('login_check') }}" method="post"s>
        <div class="form-group">
        <label class="control-label col-sm-offset-3 col-sm-2" for="username">Nom d'Utilisateur :</label>
            <div class="col-sm-3">
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
            </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-offset-3 col-sm-2" for="password">Mot de passe :</label>
        <div class="col-sm-3">
        <input class="form-control" type="password" id="password" name="_password" />
    </div>
        <div class="form-group">
            <div class="col-sm-offset-5 col-sm-10">
                <br>
                <button class="btn btn-default" type="submit" value="Connexion" > Connexion </button>
            </div>
        </div>
    </div>

    </form>

{% endblock %}