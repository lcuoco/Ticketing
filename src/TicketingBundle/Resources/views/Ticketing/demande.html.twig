{% extends "TicketingBundle:Ticketing:layout.html.twig" %}
{% block logout %}  <ul class="nav navbar-nav navbar-right"><li><a href="{{ path('logout') }}"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li></ul>{% endblock %}


{% block body %}
    <ul>
        <h3>Toutes Les Demandes </h3>

        <div class="container">

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Objet</th>
                    <th>Description</th>
                    <th>Etat</th>
                    <th> Demandeur</th>
                    <th> Date</th>

                </tr>
                {% for demande in listDemandes %}
                </thead>
                <tbody>
                <a>
                    <td>{{ demande.objet }}</td>
                    <td>{{ demande.description }}</td>
                    <td>{{ demande.etat }}</td>
                    <td>{{ demande.utilisateur.username }}</td>
                    <td>{{  demande.date|date('Y-m-d') }}</td>
                    <td> <a href="{{ path('demande_view', {'page': demande.id}) }}"> Voir la Demande

                        </a></td>
                    {% endfor %}
                </tbody>
            </table>
        </div>



    </ul>
    <a href="{{ path('ticketing_admin')}}"> Retour aux demandes en cours</a>
{% endblock %}